<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SicrediDevAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sicredi_FFCC7B26_FFCC7B26</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- All app font family -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ThemeTextTitle" parent="Theme.SicrediDevAndroid">
        <item name="android:textSize">@dimen/sicredi_22sp</item>
        <item name="android:textColor">@color/sicredi_303030_FFFFFF</item>
    </style>

    <style name="ThemeTextMoney" parent="Theme.SicrediDevAndroid">
        <item name="android:textSize">@dimen/sicredi_22sp</item>
        <item name="android:textColor">@color/sicredi_000000_FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeTextHighlight" parent="Theme.SicrediDevAndroid">
        <item name="android:background">@color/sicredi_FFCC7B26_FFCC7B26</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeButtonPrimary" parent="Theme.SicrediDevAndroid">
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:textSize">@dimen/sicredi_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>